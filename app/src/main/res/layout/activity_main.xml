<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="30dp">

            <LinearLayout
                android:id="@+id/ll_idiom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/item_book"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="成语词典"

                    android:textColor="@color/more_item_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_today"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/item_today"/>

                <TextView
                    android:id="@+id/tv_today"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="历史今天"
                    android:textColor="@color/more_item_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_train"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp"
                android:textColor="@color/more_item_color">

                <ImageView
                    android:id="@+id/iv_carcard"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/item_train"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="火车时刻"
                    android:textColor="@color/more_item_color"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            >

            <LinearLayout
                android:id="@+id/ll_movie"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_joke"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/item_movie"/>

                <TextView
                    android:id="@+id/tv_joke"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="电影票房"
                    android:textColor="@color/more_item_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_constellation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_star"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/item_star"/>

                <TextView
                    android:id="@+id/tv_star"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="星座运势"
                    android:textColor="@color/more_item_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_weather"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/itembackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_weather"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/item_weather"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_weather"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="天气查询"
                    android:textColor="@color/more_item_color"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>