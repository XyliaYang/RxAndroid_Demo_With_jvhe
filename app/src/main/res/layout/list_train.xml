<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/lv_tv_train_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D311"
            android:textColor="#4b4ef5"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/lv_tv_train_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_tv_train_no"
            android:layout_marginLeft="13dp"
            android:text="动车"/>

        <TextView
            android:id="@+id/lv_tv_start_station_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lv_tv_train_no"
            android:text="过"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/lv_tv_start_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/lv_tv_start_station_type"
            android:text="苏州"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/lv_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_tv_start_station_type"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/lv_tv_start_station_type"
            android:text="08:09"/>

        <LinearLayout
            android:id="@+id/ll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lv_tv_start_station"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/view_from_to"
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:background="@color/bg_btn_press_color_hui"/>

            <TextView
                android:id="@+id/lv_tv_run_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:text="49分"/>
        </LinearLayout>

        <TextView
            android:id="@+id/lv_tv_end_station_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ll_view"
            android:text="过"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/lv_tv_end_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/lv_tv_end_station_type"
            android:text="上海"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/lv_tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lv_tv_end_station"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lv_tv_end_station_type"
            android:text="08:58"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>

